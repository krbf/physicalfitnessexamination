<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.kbi.KbiShuntActivity">

    <Button
        android:id="@+id/btn_create"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="新建考核"
        app:layout_constraintBottom_toTopOf="@+id/btn_built"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_built"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="已建考核"
        app:layout_constraintBottom_toTopOf="@+id/btn_kbiWork"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_create" />

    <Button
        android:id="@+id/btn_kbiWork"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="考核实施"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_built" />

</android.support.constraint.ConstraintLayout>