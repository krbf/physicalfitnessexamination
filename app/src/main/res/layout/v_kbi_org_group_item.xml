<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider_ver"
    android:minHeight="@dimen/excel_height"
    android:orientation="horizontal"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="0dp"
        android:layout_height="@dimen/excel_height"
        android:layout_weight="0.4"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_remove" />

    <com.example.physicalfitnessexamination.view.excel.SpinnerParentView
        android:id="@+id/sp_group"
        android:layout_width="0dp"
        android:layout_height="@dimen/excel_height"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_gLeader"
        android:layout_width="0dp"
        android:layout_height="@dimen/excel_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/excel_textSize"
        tools:text="组长XXX" />

    <TextView
        android:id="@+id/tv_groupMember"
        android:layout_width="0dp"
        android:layout_height="@dimen/excel_height"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/excel_textSize"
        tools:text="成员XXX" />
</LinearLayout>