<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RosterFragment">

    <View
        android:id="@+id/v_headBk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="parent" />

    <!--单位-->
    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="单位:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/v_headBk"
        app:layout_constraintStart_toStartOf="@id/v_headBk"
        app:layout_constraintTop_toTopOf="@id/v_headBk"
        tools:text="单位：湘潭 支队   雨湖 大队   雨湖 消防站" />

    <!--考核类型-->
    <TextView
        android:id="@+id/tv_inspectionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="20dp"
        android:text="考核类型:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/v_headBk"
        app:layout_constraintEnd_toEndOf="@id/v_headBk"
        app:layout_constraintTop_toTopOf="@id/v_headBk"
        tools:text="考核类型: 消防站日常考核" />

    <com.example.physicalfitnessexamination.view.excel.LinearHorView
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/v_headBk" />

    <!--花名册列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_roster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title" />


</android.support.constraint.ConstraintLayout>